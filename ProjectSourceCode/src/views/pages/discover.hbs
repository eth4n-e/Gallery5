<div>
    <!--
        Setup:
        - discover route should make API calls to Artsy, retrieving Events, Artworks, Artists
        - grid like structure
            - hierarchy:
                - Events
                - Artworks
                - Artists
        - will display a sample of the ones retrieved by the API
        - 
    -->
    <div id="events">
        <h4 class="text-center mt-2">Explore Events</h4>
        <div class="container-md mb-2">
            <div class="row gx-4">
                {{#each events}}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">{{name}}</h6>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div id="artworks">
        <h4 class="text-center">Inspect Artworks</h4>
        <div class="container-md mb-2">
            <div class="row gx-4">
                {{#each artworks}}
                    <div class="col">
                        <div class="card h-100">
                            <img src={{_links.thumbnail.href}} class="card-img-top">
                            <div class="card-body">
                                <h6 class="card-title">{{title}}</h6>
                                <div class="card-text">
                                    <p>{{add artist here}}</p>
                                    <p>{{medium}}</p>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
    <div id="artists">
        <h4 class="text-center">Discover Artists</h4>
        
    </div>
</div>