<div>
    <div class="container pb-0 mb-2">
        <h4 class="text-center mt-2">Explore Artworks</h4>
        <div class="row row-cols-3 gy-4">
            {{#each artworks}}
                <div class="col">
                    <div class="card h-100 overflow-y-scroll shadow">
                        <img src='https://www.artic.edu/iiif/2/{{image_id}}/full/843,/0/default.jpg' class="card-img-top w-100 h-50 object-fit-cover">
                        <div class="card-body">
                            <h6 class="card-title">{{title}}</h6>
                            <div class="card-text fst-italic fw-light">
                                <p>{{artist_display}}</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a id="artwork-link" href="/artwork/{{id}}" class="btn btn-dark shadow card-button">View Work</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>