  <div class="container mt-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Search Artists">
{{>message}}
<div class="container mt-3 mb-3">
  <div class="row justify-content-center">
    <form action="/artists" method="get" class="col-md-6">
      <div class="input-group">
        <label for="search" class="visually-hidden">Search Artists:</label>
        <input type="text" id="search" name="keyword" class="form-control" placeholder="Search Artists">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>
<div class = "container mt-5" id="artistContainer">
{{#if results}}
<h1>Similar Artists for {{ keyword }}</h1>
<div class="artist-grid">
  {{#each results}}
    <div class="artist-card">
      <a href="/artists/{{ this.id }}">
        {{#if this._links.thumbnail}}
          <img src="{{ this._links.thumbnail.href }}" alt="{{ this.name }} Artwork" class="artist-image">
        {{/if}}
        <div class="artist-info">
          <h3>{{ this.name }}</h3>
        </div>
      </a>
    </div>
  {{/each}}
</div>
{{else}}
  {{#if message}}
    <p class="error-message">{{ message }}</p> {{else}}
    <p>No similar artists found for {{ keyword }}. Try a different artist!</p>
  {{/if}}
{{/if}}


