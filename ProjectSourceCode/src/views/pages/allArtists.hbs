

<title>Display All Artists Page</title>
{{>message}}
<div class="container mt-3 mb-3">
  <div class="row justify-content-center">
    <form action="/artists" method="get" class="col-md-6">
      <div class="input-group">
        <label for="search" class="visually-hidden">Search Artists:</label>
        <input type="text" id="search" name="keyword" class="form-control" placeholder="Search Artists">
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>
  <div class="row" id="search-results"></div>
</div>

<div class="container mt-5" id="artistContainer">
  {{#if results}}
    <h3>Similar Artists for {{ results._embeded.name }}</h3>
    <div class="row">  {{#each results}}
        <div class="col-md-3 mb-3">
          <div class="card" style="width: 20rem;">
            {{#if this._links.thumbnail}}
              <img src="{{ this._links.thumbnail.href }}" alt="{{ this.name }} Artwork" class="card-img-top img-fluid">
            {{/if}}
            <div class="card-body text-center mb-3" style = >
              <h5 class="card-title">{{ this.name }}</h5>
              </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    {{#if message}}
      <p class="error-message">{{ message }}</p> {{else}}
      <p>No similar artists found for {{ keyword }}. Try a different artist!</p>
    {{/if}}
  {{/if}}
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
