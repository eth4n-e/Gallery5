<title>Display One Artist Page</title>
{{> message }}

<div class="container mt-3">
    <div class="row">
      <div class="col-md-2">
        <!-- Artist Thumbnail on Left 1/3 of screen -->
        <img src="{{artistInfo.thumbnailURL}}" class="img-fluid" alt="Artist">
      </div>
      <div class="col-md-8">
        <!-- Artist Name and Details on Right 2/3 of screen-->
        <h2>{{artistInfo.name}}</h2>
        {{!-- <span class="text-muted text-xs">Artist ID: {{artistInfo.id}}</span> --}}

          <p><strong>Dates: </strong>{{artistInfo.birthday}} - {{artistInfo.deathday}}</p>
        <p><strong>Location: </strong> {{artistInfo.location}}</p>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col">
        <!-- Artist Bio -->
          <p>{{artistInfo.biography}}</p>
      </div>
    </div>
  </div>

  {{!-- Artworks by the artist  --}}
  <div class="container mt-3 mb-3" id="artworkContainer">
    <h3>Related Artworks</h3>
    <div class="row" id="artworkRow">
      <!--artworks are appended here! :) -->
    </div>
  </div>
